DESCRIPTION="GREYC's Magic Image Converter"
HOMEPAGE="http://gmic.sourceforge.net/"
SRC_URI="mirror://sourceforge/gmic/${PN}_${PV}.tar.gz"
PATCH_URI="1.4.8.2-no-openexr.patch"

PKG_NAMES="${PN} gimp2-${PN}"
PKG_HINTS="setup gimp"
gmic_CONTENTS="etc/ usr/bin/ usr/share/"
gimp2_gmic_CONTENTS="usr/lib/gimp/"

src_compile() {
	lndirs
	cd ${B}/src
	cygmake OS=Linux EXE=.exe IS_GCC=yes OPENEXR=no
}

src_install() {
	cd ${B}/src
	cyginstall
}
